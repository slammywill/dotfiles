        icon.color="0xff${color3:1}"                                                \
        label.padding_left=2                                                        \
        label.padding_right=$BORDER_SIDE_PAD                                        \
        label.color=$fg_color                                                       \
        script="$PLUGIN_DIR/volume.sh"


sketchybar --add slider volume.slider right                                         \
    --subscribe volume.slider                                                       \
        mouse.clicked                                                               \
        volume_change                                                               \
    --set volume.slider                                                             \
        slider.width=0                                                              \
        slider.knob=""                                                              \
        slider.knob.color=$fg_color                                                 \
        slider.highlight_color="0xff${color3:1}"                                    \
        slider.background.color=$bg_color                                           \
        slider.background.height=4                                                  \
        slider.background.corner_radius=2                                           \
        slider.background.padding_left=8                                            \
        script="$PLUGIN_DIR/vol_slider.sh"


