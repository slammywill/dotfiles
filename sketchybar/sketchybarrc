# BRACKET AROUND SYS INFO
sketchybar --add bracket sys_info disk topmem cpu_percent                           \
    --set sys_info                                                                  \
        background.color=$bg_color                                                  \
        background.height=30                                                        \
        background.border_width=$BORDER_WIDTH                                       \
        background.corner_radius=$BORDER_RADIUS                                     \
        background.border_color="0xff${color2:1}"


# CURRENT APP
sketchybar --add item front_app left                                                \
    --subscribe front_app                                                           \
        front_app_switched                                                          \
    --set front_app                                                                 \
        label.color=$fg_color                                                       \
        label.padding_left=$BORDER_SIDE_PAD                                         \
        label.padding_right=$BORDER_SIDE_PAD                                        \
        background.color=$bg_color                                                  \
        background.height=30                                                        \
        background.border_width=$BORDER_WIDTH                                       \
        background.corner_radius=$BORDER_RADIUS                                     \
        background.border_color="0xff${color3:1}"                                   \
        background.padding_left=5                                                   \
        script="$PLUGIN_DIR/front_app.sh"


##########
# CENTER #
##########


# MISSION CONTROL
sketchybar --add event aerospace_workspace_change
sketchybar --add event aerospace_focus_change

source ~/.config/sketchybar/plugins/app_icons.sh
num_workspaces=$(aerospace list-workspaces --all --count)

for sid in $(aerospace list-workspaces --all); do
    sketchybar --add item space.$sid center                                             \
        --set space.$sid                                                                \
            click_script="aerospace workspace $sid"                                     \

    if [ "$sid" = "1" ]; then
        sketchybar --set space.$sid                                                     \
            icon.padding_left=$BORDER_SIDE_PAD                                          \
            icon.padding_right=4
    elif [ "$sid" = "$num_workspaces" ]; then
        sketchybar --set space.$sid                                                     \
            icon.padding_left=4                                                         \
            icon.padding_right=$BORDER_SIDE_PAD
    else
        sketchybar --set space.$sid                                                     \
            icon.padding_left=4                                                         \
            icon.padding_right=4
    fi
    
done

sketchybar --add bracket spaces '/space\..*/'                                       \
    --subscribe spaces                                                              \
        aerospace_focus_change                                                      \
    --set spaces                                                                    \
        background.color=$bg_color                                                  \
        background.padding_left=40                                                  \
        background.height=30                                                        \
        background.border_width=$BORDER_WIDTH                                       \
        background.corner_radius=$BORDER_RADIUS                                     \
        background.border_color="0xff${color4:1}"                                   \
        script="$PLUGIN_DIR/aerospace.sh"


