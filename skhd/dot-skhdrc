# Shift focus within space
cmd + ctrl + alt - h : yabai -m window --focus west
cmd + ctrl + alt - j : yabai -m window --focus south
cmd + ctrl + alt - k : yabai -m window --focus north
cmd + ctrl + alt - l : yabai -m window --focus east

# Focus to workspace 
cmd + ctrl + alt - 1 : yabai -m space --focus 1
cmd + ctrl + alt - 2 : yabai -m space --focus 2
cmd + ctrl + alt - 3 : yabai -m space --focus 3
cmd + ctrl + alt - 4 : yabai -m space --focus 4
cmd + ctrl + alt - 5 : yabai -m space --focus 5
cmd + ctrl + alt - 6 : yabai -m space --focus 6
cmd + ctrl + alt - 7 : yabai -m space --focus 7
cmd + ctrl + alt - 8 : yabai -m space --focus 8


# Move window to workspace
cmd + ctrl + alt + shift - 1 : yabai -m window --space 1 --focus; yabai -m window --focus last
cmd + ctrl + alt + shift - 2 : yabai -m window --space 2 --focus; yabai -m window --focus last
cmd + ctrl + alt + shift - 3 : yabai -m window --space 3 --focus; yabai -m window --focus last
cmd + ctrl + alt + shift - 4 : yabai -m window --space 4 --focus; yabai -m window --focus last
cmd + ctrl + alt + shift - 5 : yabai -m window --space 5 --focus; yabai -m window --focus last
cmd + ctrl + alt + shift - 6 : yabai -m window --space 6 --focus; yabai -m window --focus last
cmd + ctrl + alt + shift - 7 : yabai -m window --space 7 --focus; yabai -m window --focus last
cmd + ctrl + alt + shift - 8 : yabai -m window --space 8 --focus; yabai -m window --focus last

# Misc
cmd + ctrl + alt - q : open -a "kitty"
cmd + ctrl + alt - e : open ~
cmd + ctrl + alt - f : yabai -m window --toggle float
cmd + ctrl + alt - c : ~/.close-or-quit.sh

# Swap to prev space
cmd + ctrl + alt - s : yabai -m space --focus recent

# Resize current window
cmd + ctrl + alt + shift - h : yabai -m window --resize right:-100:0 || yabai -m window --resize left:-100:0
cmd + ctrl + alt + shift - j : yabai -m window --resize bottom:0:100 || yabai -m window --resize top:0:100
cmd + ctrl + alt + shift - k : yabai -m window --resize bottom:0:-100 || yabai -m window --resize top:0:-100
cmd + ctrl + alt + shift - l : yabai -m window --resize right:100:0 || yabai -m window --resize left:100:0

